    <script>
    //video
    //Play and pause the video function start
    var video = document.getElementById("myVideo");
    var playbtn = document.getElementById("playbtn");

    function playVideo() {
        if (video.paused) {
            video.play();
            playbtn.innerHTML = "Pause";
        }
        else {
            video.pause();
            playbtn.innerHTML = "Play";
        }
    }

    playbtn.addEventListener("click", playVideo);
    //play and pause the video function end





    //Stope the video function start
    var stopbtn = document.getElementById("stopbtn");

    function StopVideo() {
        video.pause();
    }

    stopbtn.addEventListener("click", StopVideo)
    //Stop the video function end




    //slider function start

    var slider = document.getElementById("slider");

    function pauseIt() {

        video.pause();
    }


    function dragSlider() {
        video.currentTime = video.duration * (slider.value / 100);
        video.play();
    }

    function moveSlider() {
        slider.value = video.currentTime / video.duration * 100;
    }

    slider.addEventListener("input", pauseIt);
    slider.addEventListener("change", dragSlider);
    //video.addEventListener("timeupdate",moveSlider);

    //slider function end



    //Mute and unmute the volumn function start
    var mutebtn = document.getElementById("mutebtn");

    function MuteVolum() {
        if (video.muted) {
            video.muted = false;
            mutebtn.innerHTML = "Mute";
        }
        else {
            video.muted = true;
            mutebtn.innerHTML = "Unmute";
        }
    }

    mutebtn.addEventListener("click", MuteVolum);

    </script>

